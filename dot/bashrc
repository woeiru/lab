#
DIR="$( cd "$( dirname "$(readlink -f "${BASH_SOURCE[0]}")" )" >/dev/null 2>&1 && pwd )"

source "$DIR/../lib/all.bash"
source "$DIR/../lib/stw.bash"
source "$DIR/../lib/pve.bash"

alias ..='cd ..'

alias b='bash'
alias b.all.sh='bash $DIR/../set/all.sh'
alias b.stw.sh='bash $DIR/../set/stw.sh'
alias b.pve.sh='bash $DIR/../set/pve.sh'
alias b.pbs.sh='bash $DIR/../set/pbs.sh'
alias b.bup='bash "$DIR/../too/bup.sh"'

alias c='cat'
alias c.all.bash='cat $DIR/../lib/all.bash'
alias c.stw.bash='cat $DIR/../lib/stw.bash'
alias c.pve.bash='cat $DIR/../lib/pve.bash'
alias c.all.sh='cat $DIR/../set/all.sh'
alias c.stw.sh='cat $DIR/../set/stw.sh'
alias c.pve.sh='cat $DIR/../set/pve.sh'
alias c.pbs.sh='cat $DIR/../set/pbs.sh'
alias c.all.conf='cat $DIR/../var/all.conf'
alias c.stw.conf='cat $DIR/../var/stw.conf'
alias c.pve.conf='cat $DIR/../var/pve.conf'

alias d='cd'
alias d.l='cd $DIR/..'
alias d.samba='cd /etc/samba/'
alias d.snapper='cd /etc/snapper/configs'
alias d.pam='cd /usr.bash/pam_snapper'

alias ex='exit'
alias eb='exec bash'

alias g='git'
alias gl='git ls-files | xargs cat | wc -l'
alias gs='git status'

alias h='history'

alias s='sudo'

alias t='tree -L 1'
alias tt='tree -L 2'
alias ttt='tree -L 3'
alias tttt='tree -L 4'
alias ttttt='tree -L 5'

alias tu='transactional-update'

alias v='vim'
alias v.b='vim $DIR/../dot/bashrc'

alias v.all.bash='vim $DIR/../lib/all.bash'
alias v.stw.bash='vim $DIR/../lib/stw.bash'
alias v.pve.bash='vim $DIR/../lib/pve.bash'
alias v.all.sh='vim $DIR/../set/all.sh'
alias v.stw.sh='vim $DIR/../set/stw.sh'
alias v.pve.sh='vim $DIR/../set/pve.sh'
alias v.pbs.sh='vim $DIR/../set/pbs.sh'
alias v.all.conf='vim $DIR/../var/all.conf'
alias v.stw.conf='vim $DIR/../var/stw.conf'
alias v.pve.conf='vim $DIR/../var/pve.conf'

alias v.smb.conf='vim /etc/samba/smb.conf'
alias v.smbusers='vim /etc/samba/smbusers'
alias v.firewall.conf='vim /etc/firewalld/firewalld.conf'
alias v.fstab='vim /etc/fstab'

alias y='systemctl'
