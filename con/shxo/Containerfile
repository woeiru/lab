# Use Debian 12 as the base image
FROM debian:12

# Install Samba and other necessary packages
RUN apt-get update && \
    apt-get install -y samba && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Expose SMB ports
EXPOSE 139 445

# Create the user and group with specified UID and GID
ARG UID=1000
ARG GID=1000
RUN groupadd -g $GID xo && \
    useradd -u $UID -g $GID -d /home/xo -s /bin/sh xo && \
    mkdir -p /home/xo && \
    chown -R xo:xo /home/xo && \
    chmod 777 /home/xo

# Copy custom smb.conf to the container
COPY smb.conf /etc/samba/smb.conf

# Start the Samba service
CMD ["sh", "-c", "echo $USERNAME:$PASSWORD | chpasswd && (echo $PASSWORD; echo $PASSWORD) | smbpasswd -a -s $USERNAME && smbd -F --no-process-group"]

